<h2>Регистрация</h2>

<%= simple_form_for(resource, as: resource_name, url: @url || registration_path(resource_name), html: {:class => 'form-horizontal', method: @method || :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "Имя", autofocus: true %>
    <%= f.input :surname, label: "Фамилия" %>
    <%= f.input :email, label: "Основной email", hint: "Ваш основной email будет использоваться для получения уведомлений" %>
    <%= f.input :additional_email, label: "Дополнительный email", hint: "Этот email будет использоваться как контактный. Оставьте пустым, если не хотите менять пароль", required: false %>
    <%= f.input :gender, collection: { "мужской" => :male, "женский" => :female }, label: "Пол" %> 
    <%= f.input :password, label: "Пароль" %>
    <%= f.input :password_confirmation, label: "Подтверждение" %>
  </div>
  <br>

  <div class="form-actions">
    <%= f.button :submit, "Регистрация", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
